{
  "name": "js-data-adapter",
  "description": "Base adapter class that all other js-data adapters extend.",
  "version": "1.0.1",
  "homepage": "https://github.com/js-data/js-data-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-data/js-data-adapter.git"
  },
  "author": "js-data-adapter project authors",
  "license": "MIT",
  "main": "./dist/js-data-adapter.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/",
    "AUTHORS",
    "CONTRIBUTORS"
  ],
  "keywords": [
    "js-data",
    "jsdata",
    "adapter"
  ],
  "scripts": {
    "lint": "eslint --fix '{src,test}/**/*.ts'",
    "bundle": "rollup src/index.ts -c -o dist/js-data-adapter.js -m dist/js-data-adapter.js.map -f umd",
    "build": "npm run lint && npm run bundle",
    "mocha": "mocha -t 2000 -R dot './test/**/*.test.ts' -r ts-node/register",
    "cover": "nyc --require ts-node/register --cache mocha './test/**/*.test.ts' -t 2000 -R dot && nyc report --reporter=html",
    "test": "npm run build && npm run cover",
    "doc": "typedoc --mode node --out doc src",
    "release": "npm test && repo-tools updates && repo-tools changelog && repo-tools authors"
  },
  "dependencies": {
    "js-data": "^4.0.0-beta.3"
  },
  "devDependencies": {
    "@js-data/repo-tools": "^1.0.1",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^12.0.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "sinon": "^8.1.0",
    "standard": "^14.3.1",
    "ts-node": "^8.6.2",
    "tslib": "^1.10.0",
    "typedoc": "^0.16.9",
    "typescript": "^3.7.5"
  }
}
